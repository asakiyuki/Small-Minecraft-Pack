{
    "hud_screen": {
        "$screen_content": "hud.better_hud_content"
    },
    "gui_hotbar_grid_item": {
        "clips_children": true,
        "size": [
            20,
            20
        ]
    },
    "pixel": {
        "type": "image",
        "texture": "textures/ui/list_item_divider_line_light"
    },
    "hotbar_slot_selected_image": {
        "allow_clipping": false
    },
    "root_screen": {
        "type": "panel",
        "size": [
            "100%",
            "100%"
        ],
        "bindings": [
            {
                "binding_name": "#hud_visible",
                "binding_name_override": "#visible",
                "binding_type": "global"
            },
            {
                "binding_name": "#hud_alpha",
                "binding_name_override": "#alpha",
                "binding_type": "global"
            },
            {
                "binding_name": "#hud_propagate_alpha",
                "binding_name_override": "#propagateAlpha",
                "binding_type": "global"
            }
        ],
        "controls": [
            {
                "curor_rend@cursor_renderer": {
                    "bindings": [
                        {
                            "binding_name": "(not #on_new_death_screen)",
                            "binding_name_override": "#visible"
                        }
                    ]
                }
            },
            {
                "bottom_left_content": {
                    "type": "stack_panel",
                    "anchor_from": "bottom_left",
                    "anchor_to": "bottom_left",
                    "size": [
                        "100%cm",
                        "100%c"
                    ],
                    "offset": [
                        5,
                        -5
                    ],
                    "orientation": "horizontal",
                    "controls": [
                        {
                            "hotbar_content": {
                                "type": "panel",
                                "size": [
                                    "100%cm",
                                    "100%cm + 2px"
                                ],
                                "controls": [
                                    {
                                        "left@pixel": {
                                            "size": [
                                                1,
                                                "100%sm"
                                            ],
                                            "color": [
                                                0,
                                                0,
                                                0
                                            ],
                                            "anchor_from": "left_middle",
                                            "anchor_to": "left_middle"
                                        }
                                    },
                                    {
                                        "right@pixel": {
                                            "size": [
                                                1,
                                                "100%sm"
                                            ],
                                            "color": [
                                                0,
                                                0,
                                                0
                                            ],
                                            "anchor_from": "right_middle",
                                            "anchor_to": "right_middle"
                                        }
                                    },
                                    {
                                        "top@pixel": {
                                            "size": [
                                                "100%sm + 2px",
                                                1
                                            ],
                                            "color": [
                                                0,
                                                0,
                                                0
                                            ],
                                            "anchor_from": "top_middle",
                                            "anchor_to": "top_middle"
                                        }
                                    },
                                    {
                                        "bottom@pixel": {
                                            "size": [
                                                "100%sm + 2px",
                                                1
                                            ],
                                            "color": [
                                                0,
                                                0,
                                                0
                                            ],
                                            "anchor_from": "bottom_middle",
                                            "anchor_to": "bottom_middle"
                                        }
                                    },
                                    {
                                        "hotbar_grid": {
                                            "type": "grid",
                                            "$hotbar_collection_name|default": "hotbar_items",
                                            "grid_item_template": "hud.gui_hotbar_grid_item",
                                            "grid_dimensions": [
                                                1,
                                                9
                                            ],
                                            "collection_name": "$hotbar_collection_name"
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "better_hud_content": {
        "type": "panel",
        "size": [
            "100%",
            "100%"
        ],
        "controls": [
            {
                "root@hud.root_screen": {}
            },
            {
                "camera_renderer@camera_renderer": {}
            }
        ]
    }
}